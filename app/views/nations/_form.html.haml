= form_for @nation, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :ioc_code, :class => 'control-label'
    .controls
      = f.text_field :ioc_code, :class => 'text_field'
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .control-group
    = f.label :bronze, :class => 'control-label'
    .controls
      = f.number_field :bronze, :class => 'number_field'
  .control-group
    = f.label :gold, :class => 'control-label'
    .controls
      = f.number_field :gold, :class => 'number_field'
  .control-group
    = f.label :silver, :class => 'control-label'
    .controls
      = f.number_field :silver, :class => 'number_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), nations_path, :class => 'btn'
