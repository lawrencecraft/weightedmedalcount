- model_class = Nation
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:ioc_code) + ':'
  %br
  = @nation.ioc_code
%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @nation.name
%p
  %strong= model_class.human_attribute_name(:bronze) + ':'
  %br
  = @nation.bronze
%p
  %strong= model_class.human_attribute_name(:gold) + ':'
  %br
  = @nation.gold
%p
  %strong= model_class.human_attribute_name(:silver) + ':'
  %br
  = @nation.silver

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), nations_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_nation_path(@nation), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), nation_path(@nation), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
